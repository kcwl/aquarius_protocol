name: Ubuntu-gcc

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]

jobs:
  build:

    runs-on: ubuntu-latest

    strategy:
      matrix:
        os: [ubuntu-lastest]
        build_type: [Release]
        c_compiler: [gcc]
        cpp_compiler: [g++]

    steps:
    - uses: actions/checkout@v4
    - name: install boost-1.88
      shell: bash
      run: |
         sudo add-apt-repository ppa:mhier/libboost-latest
         sudo apt update
         sudo apt-get install -y libboost1.88-all-dev

      name: configure
      run: >
        cmake -B ${{ steps.strings.outputs.build-output-dir }}
        -DCMAKE_CXX_COMPILER=${{ matrix.cpp_compiler }}
        -DCMAKE_C_COMPILER=${{ matrix.c_compiler }}
        -DCMAKE_BUILD_TYPE=${{ matrix.build_type }}
        -DBOOST_SHARED_FLAG=true
        -S ${{ github.workspace }}
      
    - name: check gcc version
      run: gcc --version
     
    - name: make
      run: make
    - name: test
      run: make test
